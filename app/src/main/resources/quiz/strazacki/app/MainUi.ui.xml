<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.button {
			width: 100px;
			height: 100px;
			margin-right: 25px
		}
		
		.results {
			margin: 18px;
			font-size: 18px;
		}
		
		.prevImg {
			opacity: 0.4;
			filter: alpha(opacity =   40); /* For IE8 and earlier */
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Button styleName='{style.button}' ui:field="a">A</g:Button>
		<g:Button styleName='{style.button}' ui:field="b">B</g:Button>
		<g:Button styleName='{style.button}' ui:field="c">C</g:Button>
		<g:Button styleName='{style.button}' ui:field="d">D</g:Button>
		<g:Button styleName='{style.button}' ui:field="e">E</g:Button>
		<br />
		<g:HTML ui:field="results" styleName="{style.results}" />
		<g:Image ui:field="img" />
		<br />
		<div style="border:solid 1px #808080; margin: 25px" class="{style.prevImg}">
			<g:HTML ui:field="answer" />
			<g:Image ui:field="prev" />
		</div>
		<br />
		<div style="width:100%; text-align:right">
				&copy;2013<br/>	
				<g:Anchor ui:field="email">Krzysztof Rzymkowski</g:Anchor><br/>
				Marek WyrozÄ™bski - JRG3 Warszawa<br />
				<a href="https://github.com/rzymek/quiz-strazacki">Open-Source, BSD Licence</a>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 